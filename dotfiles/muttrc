source ~/.muttrc-local

############
# Personal settings.
############
set alias_file=~/.aliases
source ~/.aliases
set use_envelope_from=yes

############
# Personal settings.
############
set simple_search="~(~f %s | ~s %s)"
set metoo=no
set ascii_chars=yes
set index_format="%4C %Z %{%b %d} %-15.15F (%4l) %s"
set mbox_type=maildir
set mark_old=no
set editor='vim -c "set showtabline=1"'
set confirmappend=no
set recall=no
set pager_stop=yes
set mime_forward=ask-no
set realname='Robin Lee Powell'
set mailcap_path=~/.mailcap
set markers=no
set smart_wrap=no
set pager_index_lines=20

set sort=threads

auto_view text/html

alternative_order text/plain text/enriched text text/html *

# Holy Shit?!
set write_bcc=no

ignore *
unignore from: date subject to cc

#################
# Bindings
#################
bind index \Cp previous-page
bind index \Cf next-page
bind index ' ' next-page
bind index J next-line
bind index K previous-line
bind index B previous-page
bind index b previous-page
bind index <esc>b bounce-message
bind pager <esc>b bounce-message

# Quickly turn off limit
macro index L "lall\n*"

set move=no
hdr_order Subject: From: To: Cc: Date:
set fast_reply=yes
set include=yes

