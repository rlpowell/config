# .bash_profile
#*******************************
# ABOUT THIS FILE
#
# bash_profile *ONLY* is read for interactive shells, which is why we source bashrc
#*******************************

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

PATH=$HOME/bin:$PATH

export PATH

TERM=screen-256color
export TERM

# Put pwd in tmux status
prompt_func () {
  history -n
  history -a
  printf "\033]2;$(uname -n | cut -d . -f 1):$(echo $PWD | sed 's;/home/[^/]*powell;~;g')\033\\"
}
export PROMPT_COMMAND=prompt_func

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
